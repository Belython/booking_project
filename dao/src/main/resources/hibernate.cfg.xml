<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/booking</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">17021993</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.pool_size">10</property>
        <!--<property name="connection.isolation">4</property>-->
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>

        <!--Cache-->

        <property name="cache.use_second_level_cache">true</property>
        <property name="cache.use_query_cache">true</property>
        <property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>

        <!--Mappings-->

        <mapping class="by.kanarski.booking.entities.roomType.RoomType"/>
        <mapping class="by.kanarski.booking.entities.roomType.RoomTypeTranslation"/>
        <mapping class="by.kanarski.booking.entities.hotel.Hotel"/>
        <mapping class="by.kanarski.booking.entities.hotel.HotelTranslation"/>
        <mapping class="by.kanarski.booking.entities.location.Location"/>
        <mapping class="by.kanarski.booking.entities.location.LocationTranslation"/>
        <mapping class="by.kanarski.booking.entities.facility.Facility"/>
        <mapping class="by.kanarski.booking.entities.facility.FacilityTranslation"/>
        <mapping class="by.kanarski.booking.entities.User"/>
        <mapping class="by.kanarski.booking.entities.Room"/>
        <mapping class="by.kanarski.booking.entities.Bill"/>
        <mapping class="by.kanarski.booking.entities.Language"/>

    </session-factory>
</hibernate-configuration>

